@model LISMVC.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}

@*<h2>@ViewBag.Title</h2>*@
<div class="panel-heading">
    <h2>@ViewBag.Title</h2>
</div>
<hr />
<div class="panel-body">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="alert alert-warning" role="alert">
            Masa berlaku password Anda sudah habis, silahkan masukkan password baru Anda.
        </div>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3">
                <input type="submit" class="btn btn-primary" value="Save Password" />
                <button class="btn btn-danger" type="button" onclick="location.href='@Url.Action("Login", "Account")'">Cancel</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
