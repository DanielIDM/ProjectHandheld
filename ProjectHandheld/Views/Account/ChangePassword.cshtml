@{
    ViewBag.Title = "Ubah Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" name="viewport">
    <title>@ViewBag.Title &mdash; Logistic Information System</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/Content/style.css">
</head>
<body>
    <div id="app">
        <section class="section">
            <div class="container mt-1">
                <div class="row">
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        <div class="login-brand">
                            <img src="~/Images/logo_indomaret.png" />
                            Logistic Information System
                        </div>
                        <div class="card card-primary">
                            <div class="card-header"><h4>@ViewBag.Title</h4></div>
                            <div class="card-body">
                                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", name = "ChangePassword" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="alert alert-warning" role="alert">
                                        Masa berlaku password Anda sudah habis, silahkan masukkan password baru.
                                    </div>
                                    <hr />
                                    <div class="form-group row">
                                        @Html.Label("New Password: ", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            <input id="newpassword" name="newpassword" type="password" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.Label("Confirm Password: ", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-8">
                                            <input name="confirmpassword" type="password" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Ubah Password" id="changePassBtn" class="btn btn-primary btn-block" />
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="simple-footer">
                            &copy; @DateTime.Now.Year - Pt. Indomarco Prismatama - SD 3
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/tooltip.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.nicescroll.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/scroll-up-bar.min.js"></script>
    <script src="~/Scripts/sa-functions.js"></script>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/form-validation.js")

    <script src="~/Scripts/scripts.js"></script>
    <script src="~/Scripts/custom.js"></script>
</body>
</html>







